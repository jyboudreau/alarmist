{
  "name": "alarmist",
  "version": "1.0.1",
  "description": "Monitor parallel jobs",
  "main": "lib/index.js",
  "bin": {
    "alarmist-job": "bin/job.js",
    "alarmist-monitor": "bin/monitor.js"
  },
  "scripts": {
    "cmd:lint": "eslint .",
    "cmd:test": "cross-env NODE_ENV=test nyc mocha",
    "cmd:coverage": "nyc report && nyc check-coverage",
    "cmd:build": "rimraf lib && babel src --out-dir lib",
    "cmd:coveralls": "cat ./coverage/lcov.info | coveralls",
    "test": "run-s cmd:lint cmd:test cmd:coverage",
    "build": "run-s test cmd:build",
    "ci": "run-s build cmd:coveralls",
    "alarmist:lint": "node ./bin/job.js -n lint -c 'npm run -s cmd:lint'",
    "alarmist:test": "node ./bin/job.js -n test -c 'npm run -s cmd:test'",
    "alarmist:coverage": "node ./bin/job.js -n coverage -c 'npm run -s cmd:coverage'",
    "alarmist:build": "node ./bin/job.js -n build -c 'npm run -s cmd:build'",
    "watch:lint": "chokidar '+(src|test)/**/*' -c 'npm run -s alarmist:lint'",
    "watch:test": "chokidar '+(src|test)/**/*' -c 'run-s -c alarmist:test alarmist:coverage'",
    "watch:build": "chokidar 'src/**/*' -c 'npm run -s alarmist:build'",
    "watch:all": "run-p watch:build watch:lint watch:test",
    "start": "node ./bin/monitor.js -c 'npm run -s watch:all'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pghalliday/alarmist.git"
  },
  "keywords": [],
  "author": "Peter Halliday <pghalliday@gmail.com> (http://pghalliday.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pghalliday/alarmist/issues"
  },
  "homepage": "https://github.com/pghalliday/alarmist#readme",
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-preset-env": "^1.1.8",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chokidar": "^1.6.1",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.11.15",
    "cross-env": "^3.1.4",
    "eslint": "^3.14.1",
    "eslint-config-google": "^0.7.1",
    "minimist": "^1.2.0",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.1",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "blessed": "^0.1.81",
    "lockfile": "^1.0.3",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "redux": "^3.6.0",
    "redux-actions": "^1.2.1",
    "redux-logger": "^2.8.1",
    "rimraf": "^2.5.4"
  }
}
